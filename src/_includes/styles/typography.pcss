@mixin heading-margin() {
  padding-top: 48px;

  @media(--md) {
    padding-top: 64px;
  }

  @media(--lg) {
    padding-top: 72px;
  }

  @media(--xl) {
    padding-top: 88px;
  }
}

@mixin base-font() {
  font-family: $t-font;
  font-weight: 200;
  font-size: 16px;
  line-height: 1.2;
  font-style: normal;
  letter-spacing: 0px;
  color: $c-font;
}

h1, h2, h3, h4, h5, h6 {
  font-size: 24px;
  font-weight: 200;
}

body, textarea, input {
  @include base-font;
}

p + p, p + ul, p + ol, ul + p, ol + p {
  margin-top: 24px;
}

li + li {
  margin-top: 6px;
}

ul li:before {
  content: "- ";
}

a {
  color: inherit;
  text-decoration: none;
}

b, strong {
  font-weight: 700;
}